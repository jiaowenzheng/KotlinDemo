<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/ic_login_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.example.kotlindemo.widget.CustomTextView
        android:id="@+id/tv_login_btn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="微信登录"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        app:textStrokeWidth="1dp"
        app:textStrokeColor="@color/white"
        app:textRadius="4dp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <com.example.kotlindemo.widget.CustomTextView
        android:id="@+id/tv_login_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机快速登录"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_btn"
        app:layout_constraintLeft_toLeftOf="@id/tv_login_btn"
        />

    <com.example.kotlindemo.widget.CustomTextView
        android:id="@+id/tv_getting_anything"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="随便买买"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_btn"
        app:layout_constraintRight_toRightOf="@id/tv_login_btn"
        />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_login_arrow_down"
        android:layout_marginTop="70dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>